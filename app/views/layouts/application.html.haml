!!!
%html
  %head
    %title Rotten Potatoes!
    = stylesheet_link_tag 'application', 'media' => 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    %h1.title Rotten Potatoes!
    =puts("Current user in view: #{@current_user}")
    - if !@current_user
      = button_to 'Sign up/Login', login_path(@sessions), :method => :get, :id => 'signuplogin' 
    - else
      = button_to 'Logout', logout_path(@sessions), :method => :delete, :id => 'logout'
    #main
      - if flash[:notice]
        #notice.flash_message= flash[:notice]
      - elsif flash[:warning]
        #warning.message= flash[:warning]
    
      = yield
